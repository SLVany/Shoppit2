@page
@model Shoppit.Pages.ProductosModel
@{
    ViewData["Title"] = "Productos";
}
<section>
    <h2>Listado de Productos</h2>
    <br />
    <button class="btn btn-success">Agregar Producto</button> <button class="btn btn-info">Caja de Cobro</button>
    <br /><br />
    <table class="table table-dark table-striped text-center">
        <thead class="thead-dark">
        <tr>
                <th width="20%">Id</th>
                <th width="20%">Nombre</th>
                <th width="20%">Precio</th>
                <th width="20%">Cantidad</th>
            <th width="20%">Acciones</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.productos)
        {
            <tr>
                <td>@item.id_producto</td>
                <td>@item.nombre</td>
                <td>@item.precio</td>
                <td>@item.cantidad</td>
                <td><button class="btn btn-warning">Editar</button> <button class="btn btn-danger">Eliminar</button></td>
            </tr>
        }
    </tbody>
</table>
</section>